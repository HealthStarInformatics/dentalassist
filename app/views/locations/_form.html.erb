<%= form_for @locations do |f| %>
  <%= f.error_messages %>
  <table border="">
    <tr>
      <td><%= f.label :name %></td> 
      <td><%= f.text_field :name %></td>
    </tr>
    <tr>
      <td><%= f.label :address %></td> 
      <td><%= f.text_field :address %></td>
    </tr>
    <tr>
      <td><%= f.label :phone %></td> 
      <td><%= f.text_field :phone %></td>
    </tr>
    <tr>
      <td><%= f.label :hours %></td> 
      <td><%= f.text_area :hours, :cols=>23, :rows=>4 %></td>
    </tr>
    <tr>
      <td><%= f.label :dentistry_id %></td> 
      <td><%= select("location", "dentistry_id", @dentistries.collect {|p| [p.name, p.id]})%></td>
    </tr>
    <tr>
      <td><%= positive_button_submit_tag "Add Location"%></td> 
    </tr>
  </table>
<% end %>
