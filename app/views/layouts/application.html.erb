<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "Untitled" %></title>
    <%= stylesheet_link_tag "application", :media => 'all'%>
<link href="./stylesheets/button-basics.css" media="screen, projection" rel="stylesheet" type="text/css" />
    <%= stylesheet_link_tag "global" %>
	<%= javascript_include_tag :defaults, 'jquery.maskedinput.js' %>
	<script src="/javascripts/jquery.maskedinput.js" type="text/javascript"></script> 
   <script type="text/javascript">
    $(function() {
        $.mask.definitions['~'] = "[+-]";
		$("#age").mask("999");
        $("#date").mask("99/99/9999",{completed:function(){alert("completed!");}});
        $("#phone").mask("(999) 999-9999");
        $("#pager").mask("(999) 999-9999");
        $("#cellphone").mask("(999) 999-9999");
        $("#phoneExt").mask("(999) 999-9999? x99999");
        $("#iphone").mask("+33 999 999 999");
        $("#tin").mask("99-9999999");
        $("#ssn").mask("999-99-9999");
        $("#product").mask("a*-999-a999", { placeholder: " " });
        $("#eyescript").mask("~9.99 ~9.99 999");
        $("#po").mask("PO: aaa-999-***");
		$("#pct").mask("99%");
		$("#zip").mask("99999");
		$("#zipo").mask("99999");


        $("input").blur(function() {
            $("#info").html("Unmasked value: " + $(this).mask());
        }).dblclick(function() {
            $(this).unmask();
        });
    });
</script>
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
  </head>
  <body>
	<div id="header">
        <div class="wrapped">
		  <div id="logo"><a href="/">AppSumo</a></div>
		  <div id="slogan">Stephen A. Buehler, DDS - Houston, TX Dentistry</div>
        </div>
    </div>
	<div id="deal-header">
	  <ul class="navigation-list">
		<% if current_user %>
		<li class="navigation" rel="258" style="cursor: pointer"><h2><%= link_to "View Patient Forms",medicalhistories_path %></h2></li>
	    <% else %>
		<li class="navigation" rel="258" style="cursor: pointer"><h2><%= link_to "New Patient Forms",new_medicalhistory_path %></h2></li>
	    <% end %>	
		<li class="navigation" rel="258" style="cursor: pointer"><h2>Schedule Appointment</h2></li>
		<li class="navigation" rel="258" style="cursor: pointer"><h2>Contact Doctor</h2></li>
		<% if current_user %>
			<li class="navigation" rel="258" style="cursor: pointer"><h2><%= link_to "Logout", logout_path%></h2></li>
	    <% else %>
			<li class="navigation" rel="258" style="cursor: pointer"><h2><%= link_to "Login", login_path%></h2></li>
	    <% end %>	
	  </ul>
	</div>

    <div id="container">
<!--		<div id="user_nav">
			<%= link_to "Register", new_user_path %> |
			<%= link_to "Login", login_path %>
		</div>-->

      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <% end %>
      <%= content_tag :h1, yield(:title) if show_title? %>
      <%= yield %>
    </div>
  </body>
</html>
